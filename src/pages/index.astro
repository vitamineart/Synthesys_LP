---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import CTA from '../components/CTA.astro';
import FAQ from '../components/FAQ.astro';
import Reviews from '../components/Reviews.astro';
import ChecklistItem from '../components/ChecklistItem.astro';
import heroImage from '../assets/Hero_image.png';
import SubscriptitonPlans from '../components/SubscriptitonPlans.astro';
import ttvImage from '../assets/TTV.png';
import ttsImage from '../assets/TTS.png';

// JSON data imports
import reviewsData from '../../public/data/reviews.json';
import faqData from '../../public/data/faq.json';

// Checklist items for TTS section
const ttsFeatures = [
  "Cloud-based application to do work from anywhere in the world",
  "Use for sales videos, letters, animations, explainers, social media, TV commercials, podcasts, and more!",
  "Choose from a large library of professional voices: 35 Female, 30 Male",
  "Create and sell unlimited voiceovers for any purpose"
];

// Checklist items for TTV section
const ttvFeatures = [
  "AI text to Video generator with 74 real Humatars: 38 Female, 36 Male",
  "Over 66 languages to choose from a total voicebank of 254 unique styles",
  "Full customization completely created on a cloud-based application",
  "Easy to use interface for editing and rendering",
  "High resolution output",
  "Perfect for explainer videos, eLearning, social media, product descriptions, and more!"
];

// Digital content use cases
const digitalContentItems = [
  {text: "Explainer Videos", icon: "explainer-videos"},
  {text: "Gaming", icon: "gaming"},
  {text: "Voice mail and On-Hold messages", icon: "voicemail"},
  {text: "Spotify and TV Commercials", icon: "spotify-tv"},
  {text: "Audio Website Confirmations", icon: "audio-confirmation"},
  {text: "Training videos", icon: "training-videos"},
  {text: "Audio Instructions", icon: "audio-instructions"},
  {text: "Video Marketing Ads", icon: "video-marketing-ads"},
  {text: "Cartoons and Animations", icon: "cartoons"},
  {text: "Video Sales Letters", icon: "video-sales"},
  {text: "Podcasts", icon: "podcasts"},
  {text: "Social Media Stories", icon: "social-stories"},
  {text: "Presentations", icon: "presentations"},
  {text: "Audiobooks", icon: "audiobooks"}
];
---

<Layout
  title="Professional AI Voiceover and AI Video Generator | Synthesys Studio"
  description="AI Voiceover and AI Video Generator. Produce Your Next Professional audiovisual content without spending money on hiring actors, cameras, or audio equipment."
  canonicalURL="https://synthesys.io"
  currentPage="home"
>
  <Fragment slot="preload">
    <link rel="preload" as="image" href={heroImage.src} imagesrcset={heroImage.srcSet?.attribute} imagesizes="(max-width: 768px) 100vw, (min-width: 769px) 570px" fetchpriority="high" decoding="async" />
  </Fragment>

  <main>
    <!-- Hero Section -->
    <Hero
      subtitleOrder="before"
      subtitle="Produce Your Next Professional AI Voiceover or AI Video in just a Few Clicks."
      title="On the Leading AI Virtual Media Platform"
      heroImage={heroImage}
      heroImageAlt="Synthesys Hero Image"
      heroImageWidth={817}
      heroImageHeight={646}
      ctaText="Get Started"
      ctaLink="#subscription-plans"
    />

    <!-- Synthesys AI Virtual Avatars Start -->
    <section class="bg-black py-12 lg:pt-32 lg:pb-28">
      <div class="container">
        <div class="lg:flex items-start">
          <div class="lg:w-[46%] lg:pr-28">
            <div class="uppercase text-2xl lg:text-3xl leading-normal font-bold text-white heading-accent flex flex-col items-start before:block before:mb-5 lg:before:mb-16 lg:mt-2 before:border-green before:w-12 before:border-t-3">
              <h2>Synthesys AI Virtual Avatars</h2>
            </div>
            <div class="text-green text-base lg:text-xl leading-relaxed mt-3">
              Sound, Look, Talk, and Act Just Like their Human Counterpart Reading Your Script...
            </div>
          </div>
          <div class="lg:w-[54%]">
            <p class="mt-5 lg:mt-0">
              Synthesys is on the leading edge of developing algorithms for text to voiceover and videos for commercial use. Imagine being able to enhance your website explainer videos or product tutorials in a matter of minutes with the aid of a natural human voice. Synthesys Text-to-Speech (TTS) and Synthesys Text-to-Video (TTV) technology transform your script into vibrant and dynamic media presentations.
            </p>
            <p class="mt-5 lg:mt-8">
              Using clear, natural voiceovers brings trust and authority to your digital message, creating a relatable and emotional connection between your customers and your brand. With the power of Synthesys ai voice generator, you can make the jump from plain old text to dynamic and engaging digital content.
            </p>
            <div class="mt-10 lg:mt-14 text-white text-base lg:text-xl">
              Choose <a href="#tts-section" class="text-blue inline-block mx-2 hover:opacity-75 transition-opacity">
                <svg class="w-3 h-5 lg:w-4 lg:h-6 inline-block fill-current">
                  <use xlink:href="/icons/sprite.svg#icon-microphone"></use>
                </svg>
                <span class="border-current border-b border-dotted">AI Voiceover</span>
              </a> or <a href="#ttv-section" class="text-green transition-opacity hover:opacity-75 inline-block mx-2">
                <svg class="w-5 h-5 lg:w-7 lg:h-7 inline-block fill-current">
                  <use xlink:href="/icons/sprite.svg#icon-play"></use>
                </svg>
                <span class="border-current border-b border-dotted">AI Video</span>
              </a> Productions... or Both
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Synthesys AI Virtual Avatars End -->

    <!-- Synthesys AI Features Start -->
    <section class="py-12 lg:pt-40 lg:pb-38">
      <div class="container">
        <div id="tts-section" class="lg:flex items-center">
          <div class="lg:w-[53%] lg:pr-10">
            <Image
              layout='constrained'
              src={ttsImage}
              alt="Text to Speech Interface"
              width={700}
              height={546}
            />
          </div>
          <div class="lg:w-[47%]">
            <div class="uppercase text-2xl lg:text-3xl leading-normal font-bold text-white mt-10 lg:mt-0">
              <h2>Synthesys ai voice generator</h2>
            </div>
            <div class="text-blue text-base lg:text-xl leading-relaxed mt-1 lg:mt-3">Text to Speech Realistic</div>
            <p class="mt-3 lg:mt-8">
              With only 3 simple clicks, you can rapidly grow your business using the authority and trustworthy text-to-voiceovers your clients will appreciate. This unique ai voice generator eliminates the robotic and strange-sounding voices of the past and shifts your business into high gear with clear and natural delivery, just like a real human being!
            </p>

            <div class="text-white font-semibold text-lg lg:text-xl mt-6 lg:mt-12">Features Include:</div>
            <ul class="check-list text-blue mt-4 lg:mt-7 space-y-4 lg:space-y-5">
              {ttsFeatures.map((feature) => (
                <ChecklistItem content={feature} />
              ))}
            </ul>
            <a href="/ai-text-to-speech" class="text-sm lg:text-base group text-blue ml-10 mt-8 inline-block transition-opacity hover:opacity-75 duration-500">
              Find Out More
              <svg class="w-5 h-3 stroke-current inline-block ml-3 group-hover:translate-x-5 transition-transform duration-300 ease-out">
                <use xlink:href="/icons/sprite.svg#icon-arrow-right"></use>
              </svg>
            </a>
          </div>
        </div>

        <div id="ttv-section" class="flex flex-col lg:flex-row items-center pt-16 lg:pt-36">
          <div class="lg:w-[53%] lg:pr-16">
            <div class="uppercase text-2xl lg:text-3xl leading-normal font-bold text-white">
              <h2>Synthesys ai video generator</h2>
            </div>
            <div class="text-green text-base lg:text-xl leading-relaxed mt-1 lg:mt-3">AI Text to Video</div>
            <p class="mt-3 lg:mt-8">
              Never struggle again with finding acting talent to finish your sales videos. Now you can easily create videos of your own using our revolutionary lip-synching AI video technology. You can create a unique spokesperson virtual spokesperson to deliver visual that elevates your messaging.
            </p>

            <div class="text-white font-semibold text-lg lg:text-xl mt-6 lg:mt-12">Features Include:</div>
            <ul class="check-list text-green mt-4 lg:mt-7 space-y-4 lg:space-y-5">
              {ttvFeatures.map((feature) => (
                <ChecklistItem content={feature} />
              ))}
            </ul>
            <a href="/ai-video" class="text-sm lg:text-base group text-green ml-10 mt-8 inline-block transition-opacity hover:opacity-75">
              Find Out More
              <svg class="w-5 h-3 stroke-current inline-block ml-3 group-hover:translate-x-5 transition-transform duration-300 ease-out">
                <use xlink:href="/icons/sprite.svg#icon-arrow-right"></use>
              </svg>
            </a>
          </div>
          <div class="lg:w-[47%] lg:pr-10 order-first mb-10 lg:mb-0 lg:order-none">
            <Image
              layout='constrained'
              src={ttvImage}
              alt="Text to Video Interface"
              width={652}
              height={583}
            />
          </div>
        </div>
      </div>
    </section>
    <!-- Synthesys AI Features End -->

    <!-- Reviews Section -->
    <Reviews color="green" reviewsData={reviewsData} />

    <!-- Good Digital Content Start -->
    <section class="py-12 lg:py-38">
      <div class="container lg:flex items-start">
        <div class="lg:w-5/12 lg:pr-20">
          <div class="text-green text-base lg:text-xl leading-relaxed flex flex-col items-start before:block before:mb-5 lg:before:mb-16 mt-0 before:border-green before:w-12 before:border-t-3">
            Where Good Digital Content Becomes
          </div>
          <div class="uppercase text-2xl lg:text-3xl leading-normal font-bold text-white heading-accent mt-4 lg:mt-5">
            Great digital content
          </div>
          <p class="mt-5 lg:mt-15">
            Used by thousands of marketers around the globe, Synthesys AI text-to-speech and text-to-video productions good digital content into great digital content. You'll enhance your customer experience and convert more sales.
          </p>
        </div>
        <div class="lg:w-7/12 mt-6 lg:mt-0">
          <ul class="grid grid-cols-1 sm:grid-cols-2 gap-1 lg:gap-2">
            {digitalContentItems.map((item) => (
              <li class="flex p-2 rounded-lg">
                <svg class="w-8 h-8 fill-current text-green mr-4">
                  <use xlink:href={`/icons/sprite.svg#icon-${item.icon}`}></use>
                </svg>
                <span class="text-bodycopy">{item.text}</span>
              </li>
            ))}
          </ul>
          <p class="text-base lg:text-xl text-white mt-6 lg:mt-8 pl-14 lg:pl-0">Much, much more...</p>
        </div>
      </div>
    </section>
    <!-- Good Digital Content End -->

    <!-- CTA Section -->
    <CTA
      icon="developer-tools"
      sectionTitle="Are you a developer?"
      contentTitle="Synthesys API"
      description="Our teams will work with you to integrate Synthesys TTS and TTV APIs into your software build. Contact our technical team for more information."
      showButton={false}
      backgroundColor="green"
    />

    <SubscriptitonPlans />

    <!-- FAQ Section -->
    <div class="bg-black">
      <FAQ color="green" faqData={faqData} />
    </div>
  </main>
</Layout>
